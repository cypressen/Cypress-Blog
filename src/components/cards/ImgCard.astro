---
import { Image } from "astro:assets";
type Props = {
  src: string;
  alt: string;
};
const { src, alt } = Astro.props;
---

<div class="card p-4">
  <Image
    class="rounded-3xl object-cover w-full h-full shadow-xl hover:shadow-none transition-shadow duration-700"
    src={src}
    alt={alt}
    width={100}
    height={100}
  />
</div>
